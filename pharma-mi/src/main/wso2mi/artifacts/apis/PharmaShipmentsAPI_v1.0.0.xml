<?xml version="1.0" encoding="UTF-8"?>
<api name="PharmaShipmentsAPI" statistics="enable" trace="enable" context="/shipments/1.0.0" version="1.0.0" version-type="context" xmlns="http://ws.apache.org/ns/synapse">
    <!-- GET /shipments/1.0.0/{id} â€“ used by GetShipmentStatusTool -->
    <resource methods="GET" uri-template="/*">
        <inSequence>
            <sequence key="CommonInSeq"/>
            <!-- Rebuild backend URI: /shipments/{id} -->
            <property name="REST_URL_POSTFIX" expression="concat('/shipments', get-property('axis2','REST_URL_POSTFIX'))" scope="axis2" type="STRING"/>
            <send>
                <endpoint key="ShipmentsStatusEP"/>
            </send>
        </inSequence>
        <outSequence>
            <sequence key="CommonOutSeq"/>
            <send/>
        </outSequence>
        <faultSequence>
            <sequence key="CommonFaultSeq"/>
        </faultSequence>
    </resource>
</api>
